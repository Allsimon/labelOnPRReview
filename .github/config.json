[
  {
    "root": ".",
    "projectType": "other",
    "versioning": {
      "source": "milestones",
      "type": "SemVer"
    },
    "pr": {
      "labels": {
        "backend": {
          "requires": 1,
          "conditions": [
            {
              "type": "filesMatch",
              "glob": "backend/**/*"
            }
          ]
        },
        "UI": {
          "requires": 1,
          "conditions": [
            {
              "type": "filesMatch",
              "glob": "ui/**/*"
            }
          ]
        },
        "documentation": {
          "requires": 1,
          "conditions": [
            {
              "type": "filesMatch",
              "glob": "documentation/**/*"
            }
          ]
        },
        "draft": {
          "requires": 1,
          "conditions": [
            {
              "type": "isDraft",
              "value": true
            }
          ]
        },
        "waiting_review": {
          "requires": 1,
          "conditions": [
            {
              "type": "pendingReview",
              "value": true
            }
          ]
        },
        "changes_requested": {
          "requires": 1,
          "conditions": [
            {
              "type": "requestedChanges",
              "value": true
            }
          ]
        },
        "ready_to_test": {
          "requires": 1,
          "conditions": [
            {
              "type": "isApproved",
              "value": true,
              "required": 1
            }
          ]
        }
      }
    }
  }
]
