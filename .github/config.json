          },
          "SIZE - XXL": {
            "requires": 1,
            "conditions": [
              {
                "type": "changesSize",
                "min": 1000
              }
            ]
          },
          "Accepted": {
            "requires": 6,
            "conditions": [
              {
                "type": "isApproved",
                "value": true,
                "required": 1
              }
            ]
          },
          "Awaiting Review": {
            "requires": 1,
            "conditions": [
              {
                "type": "pendingReview",
                "value": true
              }
            ]
          },
          "Change Requested": {
            "requires": 1,
            "conditions": [
              {
                "type": "requestedChanges",
                "value": true
              }
            ]
          }
        }
      },
      "issue": {
        "ref": "develop",
        "labels": {
          "Customer - Enel": {
            "requires": 1,
            "conditions": [
              {
                "type": "descriptionMatches",
                "pattern": "/^- \\[Customer\\] Enel/im"
              }
            ]
          }
        }
      },
      "project": {
        "ref": "develop",
        "labels": {
          "Investigation": {
            "requires": 1,
            "conditions": [
              {
                "type": "onColumn",
                "project": "Optimisation Core",
